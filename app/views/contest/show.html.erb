<br/>

<%= @contest.election.date.to_s %>
<table>
<tr><td><b>type</b></td><td><%= @contest.type %></td></tr>
<tr><td><b>partisan</b></td><td><%= @contest.partisan %></td></tr>
<tr><td><b>primary party</b></td><td><%= @contest.primary_party ? @contest.primary_party : '' %></td></tr>
<tr><td><b>electorate specifications</b></td><td><%= @contest.electorate_specifications ? @contest.electorate_specifications : '' %></td></tr>
<tr><td><b>special</b></td><td><%= @contest.special ? @contest.special : '' %></td></tr>
<tr><td><b>office</b></td><td><%= @contest.office ? @contest.office : '' %></td></tr>
<tr><td><b>number elected</b></td><td><%= @contest.number_elected ? @contest.number_elected.to_s : '' %></td></tr>
<tr><td><b>number voting for</b></td><td><%= @contest.number_voting_for ? @contest.number_voting_for.to_s : '' %></td></tr>
</table>
</br>
<% if @referendum %>
<b>Referendum: <%= @referendum.title %></b>
<table>
<tr><td><b>subtitle</b></td><td><%=h @referendum.subtitle ? @referendum.subtitle: '' %></td></tr>
<tr><td><b>brief</b></td><td><%=h @referendum.brief ? @referendum.brief : '' %></td></tr>
<tr><td><b>text</b></td><td><%=h @referendum.text %></td></tr>
<tr><td><b>pro statement</b></td><td><%=h @referendum.pro_statement ? @referendum.pro_statement : '' %></td></tr>
<tr><td><b>con statement</b></td><td><%=h @referendum.con_statement ? @referendum.con_statement : '' %></td></tr>
<tr><td><b>passage threshold</b></td><td><%=h @referendum.passage_threshold ? @referendum.passage_threshold : '' %></td></tr>
<tr><td><b>effect of abstain</b></td><td><%=h @referendum.effect_of_abstain ? @referendum.effect_of_abstain : '' %></td></tr>
<tr><td><b>responses</b></td><td><%=h @responses.join(', ') %></td></tr>
</table>
<% end %>


<% if @candidates %>
<br/>
<b>Candidates</b>
<table>
<% @candidates.each do |c| %>
	<tr>
	   <td><% if c.photo_url %>
		<%= link_to('<img src="'+c.photo_url+'">', c) %>
	       <% end %>
 	   </td>
           <td><%= link_to c.name, c %></td>
	   <td><%= c.party ? c.party : ''%></td>
	</tr>
<% end %>
</table>
<% end %>
